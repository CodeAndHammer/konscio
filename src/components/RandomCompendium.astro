---
import { config } from "../config";
import { slugifyPath } from "../utils/slugify";

const base = config.baseUrl;

interface Entry {
  file: string;
  frontmatter: { title: string };
}

const { count = 6 } = Astro.props as { count?: number };

const compendiumGlob = import.meta.glob("../content/compendium/*.md", {
  eager: true,
});

const entries = Object.values(compendiumGlob) as unknown as Entry[];

function pickRandom<T>(arr: T[], n: number): T[] {
  const copy = [...arr];
  for (let i = copy.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [copy[i], copy[j]] = [copy[j], copy[i]];
  }
  return copy.slice(0, Math.max(0, Math.min(n, copy.length)));
}

const randomEntries = pickRandom(entries, count);
---

<section class="recent-posts" aria-label="Compendium Picks">
  <h3 class="section-title">From the Compendium</h3>
  <ul class="post-list">
    {
      randomEntries.map((entry) => (
        <li class="post-item">
          <a
            href={`${base}compendium/${slugifyPath(entry.file)}`}
            data-astro-prefetch
            class="post-link"
          >
            {entry.frontmatter.title}
          </a>
        </li>
      ))
    }
  </ul>
</section>

<style>
  .recent-posts {
    margin-bottom: 0;
  }

  .section-title {
    font-family: var(--font-heading-secondary);
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-accent);
    margin-bottom: calc(var(--grid-unit) * 1.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 2px solid var(--color-accent);
    padding-bottom: calc(var(--grid-unit) / 2);
  }

  .post-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: calc(var(--grid-unit) * 1.5);
  }

  .post-item {
    display: flex;
    flex-direction: column;
    gap: calc(var(--grid-unit) / 2);
  }

  .post-link {
    font-weight: 500;
    line-height: 1.3;
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-link:hover,
  .post-link:focus {
    color: var(--color-accent);
  }
</style>
