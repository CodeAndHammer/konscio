---
export interface Props {
  entries: Array<{
    slug: string;
    title: string;
    description: string;
  }>;
  count?: number;
}

const { entries, count = 4 } = Astro.props;
---

<section class="compendium-section">
  <div class="container">
    <h2 class="section-title">From The Compendium</h2>
    <p class="compendium-description">
      Essential concepts for understanding socialist, decolonial, and ecological
      struggle.
    </p>

    <div class="compendium-grid" id="compendium-grid">
      {
        entries.map((entry) => (
          <a
            href={`/compendium/${entry.slug}`}
            data-astro-prefetch
            class="compendium-card"
          >
            <article>
              <h3 class="compendium-card-title">{entry.title}</h3>
              <p class="compendium-card-description">{entry.description}</p>
            </article>
          </a>
        ))
      }
    </div>

    <div class="compendium-actions">
      <a
        href={`${import.meta.env.BASE_URL}compendium`}
        data-astro-prefetch
        class="btn btn-primary">Browse All Concepts</a
      >
    </div>
  </div>
</section>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .compendium-section {
    padding: calc(var(--grid-unit) * 8) 0;
  }

  .section-title {
    font-family: var(--font-heading-secondary);
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: calc(var(--grid-unit) * 6);
    text-align: center;
  }

  .compendium-description {
    text-align: center;
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: calc(var(--grid-unit) * 6);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .compendium-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: calc(var(--grid-unit) * 4);
    margin-bottom: calc(var(--grid-unit) * 6);
  }

  .compendium-card {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: calc(var(--grid-unit) * 4);
    text-align: center;
    text-decoration: none;
    display: block;
    transition:
      transform 0.3s ease,
      border-color 0.3s ease;
  }

  .compendium-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-accent);
  }

  .compendium-card:hover .compendium-card-title {
    color: var(--color-text-primary);
  }

  .compendium-card-title {
    font-family: var(--font-heading-secondary);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-accent);
    margin-bottom: calc(var(--grid-unit) * 1.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .compendium-card-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    font-size: 0.95rem;
    margin: 0;
  }

  .compendium-actions {
    text-align: center;
  }

  .btn {
    font-family: var(--font-heading-secondary);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: calc(var(--grid-unit) * 1.5) calc(var(--grid-unit) * 3);
    border-radius: 4px;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    font-size: 0.95rem;
  }

  .btn-primary {
    background-color: var(--color-accent);
    color: white;
    border: 2px solid var(--color-accent);
  }

  .btn-primary:hover,
  .btn-primary:focus {
    background-color: transparent;
    color: var(--color-accent);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .compendium-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script is:inline define:vars={{ count }}>
  function randomizeCompendium() {
    const grid = document.getElementById("compendium-grid");
    if (!grid) {
      return;
    }

    const cards = Array.from(grid.children);
    if (cards.length <= count) {
      return;
    }

    const shuffled = cards.sort(() => Math.random() - 0.5);
    const selected = shuffled.slice(0, count);

    cards.forEach((card) => {
      card.style.display = "none";
    });

    selected.forEach((card) => {
      card.style.display = "block";
    });
  }

  randomizeCompendium();
</script>
